<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
			<ul class="nav">
	  		<li><%= link_to root_url, :class => "logo" do %>
							<i class="icon-asterisk"></i><%= @community ? "#{@community.name} Student + Alumni Network" : "Home" %>
						<% end %>
				</li>
			</ul>
			<% if user_signed_in? %>
			<span class="right_nav">
				<ul class="nav" style="margin-right: 0;">

								<li><%= link_to root_url, :class => users_page ? "active" : nil do %><i class="icon-user"></i><% end %></li>
			
								<li><%= link_to discussions_path, :class => conversations_page ? "active" : nil do %><i class="icon-comments"></i><% end %></li>
				
				<li><%= link_to posts_path, :class => newsletter_page ? "active" : nil do %><i class="icon-align-justify"></i><% end %></li>
