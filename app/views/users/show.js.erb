if ( !$('#user_profile_<%= @user.id %>').html().trim() ) {
	$('#user_profile_<%= @user.id %>').html("<%= j render :partial => 'users/profile', :locals => { :user => @user } %>");
}
$('#user_profile_<%= @user.id %>').toggle();
$('#user_image_<%= @user.id %> i:first').toggleClass('icon-chevron-down icon-chevron-up');
$('#users').isotope('reLayout');