var $container = $('#users');
$container.isotope( 'insert', $('<%= j render @users %>') );
$container.imagesLoaded( function(){
	$container.isotope('reLayout')
});
<% if @users.current_page < @users.num_pages %>
	$('.pagination').replaceWith('<%= j paginate @users %>');
<% else %>
	$('.pagination').remove();
<% end %>