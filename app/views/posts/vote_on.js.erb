<% if voted_for?(@post) %>
	$('#vote_up_<%= @post.id %>').addClass('post-voted');
	$('#vote_down_<%= @post.id %>').removeClass('post-voted');
<% else %>
	$('#vote_up_<%= @post.id %>').removeClass('post-voted');
	$('#vote_down_<%= @post.id %>').addClass('post-voted');
<% end %>
$('#vote_count_<%= @post.id %>').html("<%= vote_count(@post) %>");